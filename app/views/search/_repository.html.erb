    <p class="mb-1"> <%= repository.description %> </p>
    <p class="mb-1">
      <span> Updated <%= time_ago_in_words(repository.updated_at) %> ago </span>
      
      <% if repository.language %>
        <span class="ml-5"> Language: <code><%= repository.language %></code> </span>
      <% end %>
      
